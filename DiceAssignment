package dicegame;
import java.util.Scanner;
import java.util.Random;

public class DiceGame {
    public static void main(String[] args) 
    {
        Random roll = new Random();
        Scanner input = new Scanner(System.in);
        // Creates array with 3 elements: 0, 1, 2
        int[] dInput = new int[3];
        // Creates array with 60 elements: from 0 to 59
        int[] dTally = new int[60];
        System.out.println("Welcome to Gambling Addiction Onlineâ„¢");
        System.out.print("Enter how many dice to roll (max 6): ");
        dInput[0] = input.nextInt();
        while(dInput[0] > 6 || dInput[0] < 1){
        System.out.print("Error! Input a number between 1 and 6: ");
        dInput[0] = input.nextInt();
        }
        System.out.print("Enter how many sides for each dice (max 10): ");
        dInput[1] = input.nextInt();
        while(dInput[1] > 10 || dInput[1] < 1){
        System.out.print("Error! Input a number between 1 and 10: ");
        dInput[1] = input.nextInt();
        }
        System.out.print("How many times should we roll (max 10,000,000): ");
        dInput[2] = input.nextInt();
        while(dInput[2] > 10000000 || dInput[2] < 1){
        System.out.print("Error! Input a number between 1 and 10,000,000: ");
        dInput[2] = input.nextInt();
        }
        //Set min and max for determing Random roll range
        int max = dInput[0]*dInput[1];
        int min = dInput[0];
        //For loop rolls dInput[2] number of times
        for (int i = 0; i < dInput[2]; i++)
        {
            int c = roll.nextInt(max - min + 1) + min - 1;
            dTally[c] += 1;    
        }
        System.out.printf("%10s%15s\n", "Amount Rolled", "Times Rolled");
        for (int i = dInput[0] - 1; i < max; i++) {
        System.out.printf("%10d%15d\n", i + 1, dTally[i]);
        }
//      Testing code
//      System.out.printf("%10s%15s\n", "Dice Total", "Rolled");
//      for (int i = 0; i < 64; i++) {
//      System.out.printf("%10d%15d\n", i + 1, dTally[i]);
//       }
        int sum = 0;
        for (int c = 0; c < dTally.length; c++)
        {
            sum += dTally[c];
        }
        System.out.printf("\nTotal Rolls");
        System.out.printf("\n%d\n", sum);
    } 
}

